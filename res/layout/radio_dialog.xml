<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
    	<TextView android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/radio_dialog_title" android:layout_weight="0"></TextView>
        <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/radio_dialog_list" android:layout_weight="1"></ListView>
  		<LinearLayout
  			android:layout_weight="0"
  		    android:id="@+id/radio_dialog_wrapper"
  		    android:layout_width="match_parent"
  		    android:layout_height="wrap_content"
  		    android:orientation="horizontal"
  		    >
  		    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.5" android:id="@+id/radio_dialog_ok_button" android:text="@string/OK"></Button>
  		    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.5" android:id="@+id/radio_dialog_cancel_button" android:text="@string/cancel"></Button>
  		</LinearLayout>    
    
</LinearLayout>
