<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/empty_order_relative_layout">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="174dp" android:id="@+id/empty_order_text" android:text="@string/no_orders_yet"></TextView>
        <Button android:layout_height="wrap_content" android:layout_below="@+id/empty_order_text" android:layout_centerHorizontal="true" android:layout_marginTop="5dp" android:text="@string/create_order" android:id="@+id/empty_order_create_button" android:layout_width="wrap_content"></Button>
    </RelativeLayout>
    
</LinearLayout>
